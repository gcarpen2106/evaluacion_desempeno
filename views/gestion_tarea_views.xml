<odoo>
    <!-- Vista de Formulario -->
    <record id="view_desempeno_empleados_form" model="ir.ui.view">
        <field name="name">desempeno.empleados.form</field>
        <field name="model">desempeno.empleados</field>
        <field name="arch" type="xml">
            <form string="Evaluación">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Título de la evaluación"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="assigned_to" options="{'no_create': True}"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="score"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Comentarios">
                            <field name="description" placeholder="Añade tus comentarios sobre la evaluación..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_desempeno_empleados_kanban" model="ir.ui.view">
        <field name="name">desempeno.empleados.kanban</field>
        <field name="model">desempeno.empleados</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="assigned_to"/>
                <field name="date"/>
                <field name="score"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="score"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'in_progress': 'info', 'done': 'success'}}"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <strong>Empleado: </strong>
                                    <field name="assigned_to"/>
                                </div>
                                <div>
                                    <strong>Fecha: </strong>
                                    <field name="date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Lista -->
    <record id="view_desempeno_empleados_tree" model="ir.ui.view">
        <field name="name">desempeno.empleados.tree</field>
        <field name="model">desempeno.empleados</field>
        <field name="arch" type="xml">
            <tree string="Evaluaciones" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="assigned_to"/>
                <field name="date"/>
                <field name="score"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_desempeno_empleados_search" model="ir.ui.view">
        <field name="name">desempeno.empleados.search</field>
        <field name="model">desempeno.empleados</field>
        <field name="arch" type="xml">
            <search string="Buscar Evaluaciones">
                <field name="name"/>
                <field name="assigned_to"/>
                <field name="state"/>
                <separator/>
                <filter string="Mis Evaluaciones" name="my_evaluations" domain="[('assigned_to.user_id', '=', uid)]"/>
                <filter string="En Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="En Progreso" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Finalizadas" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Empleado" name="employee" context="{'group_by': 'assigned_to'}"/>
                    <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Fecha" name="date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para abrir las vistas -->
    <record id="action_desempeno_empleados" model="ir.actions.act_window">
        <field name="name">Evaluaciones de Desempeño</field>
        <field name="res_model">desempeno.empleados</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_desempeno_empleados_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera evaluación de desempeño
            </p>
            <p>Gestiona las evaluaciones de desempeño de tus empleados.</p>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_desempeno_empleados_root" name="Evaluaciones" sequence="10"/>
    <menuitem id="menu_desempeno_empleados_main" name="Evaluaciones de Desempeño" parent="menu_desempeno_empleados_root" action="action_desempeno_empleados" sequence="10"/>
</odoo>